#:kivy 1.11.1
#:import GameScreen shifttype.gamescreen.GameScreen

# Define your background color Template
<BackgroundColor>:
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<TsTile>:
    text: self.letter
    font_size: self.width / 2
    background_color: self.get_color(self.used)

<Reel>:
    orientation: 'vertical'

<ReelSlider>:
    size_hint: 1, None
    size:  self.width, self.width * len(self.children)
    orientation: 'vertical'

<GameScreen>:
    real_game: real_game
    BoxLayout:
        id: real_game
        orientation: 'horizontal'
        size_hint: root.num_letters / 7.2, None
        center_y: root.center_y
        x: (root.width  - self.width) / 2
        canvas.after:
            Color:
                rgba: 0, 1, 0, 1
            Line:
                rectangle: self.x, self.y, self.width, self.width / root.num_letters
                width: 5
    BoxLayout:
        id: game_over
        orientation: 'vertical'
        opacity: 0
        background_color: 0, 0, 0, 0.75
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            id: game_over_label
            text_size: root.width, None
            size: self.texture_size
            halign: 'center'
            markup: True
            font_size: '24sp'

ScreenManager:
    id: screen_manager
    GameScreen:
        id: game_screen
        name: 'game'
        manager: 'screen_manager'

#:kivy 1.11.1
#:import GameScreen shifttype.gamescreen.GameScreen

# Define your background color Template
<BackgroundColor>:
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<TsTile>:
    text: self.letter
    font_size: self.width / 2
    background_color: self.get_color(self.used)

<Reel>:
    orientation: 'vertical'

<ReelSlider>:
    size_hint: 1, None
    size:  self.width, self.width * len(self.children)
    orientation: 'vertical'

<GameArea>:
    orientation: 'horizontal'
    size_hint: self.num_letters/7.2, None
    canvas.after:
        Color:
            rgba: 1, 0, 0, .5
        Line:
            rectangle: self.x, self.y, self.width, self.width / self.num_letters
            width: 5

GameScreen:
    anchor_x: 'center'
    anchor_y: 'center'
